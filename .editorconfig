# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Global settings (applies to all files)
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
# Use spaces for indentation
indent_style = space
# Indentation size
indent_size = 4
# File encoding
charset = utf-8
# Organize usings
dotnet_sort_system_directives_first = true
# Require braces for all control blocks
csharp_style_require_braces = always:suggestion
# Use explicit type instead of var
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = false:suggestion
csharp_style_var_elsewhere = false:suggestion
# Prefer expression-bodied members
csharp_style_expression_bodied_methods = when_possible:suggestion
csharp_style_expression_bodied_properties = when_possible:suggestion
# Naming conventions
dotnet_naming_rule.interface_should_start_with_i.severity = suggestion
dotnet_naming_rule.interface_should_start_with_i.symbols = interfaces
dotnet_naming_rule.interface_should_start_with_i.style = prefix_i
dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_symbols.interfaces.applicable_accessibilities = *
dotnet_naming_symbols.interfaces.required_modifiers = *
dotnet_naming_style.prefix_i.required_prefix = I
dotnet_naming_style.prefix_i.capitalization = pascal_case

# Additional rules for test files
[*.Tests.cs]
# Allow longer lines in test files
max_line_length = off
