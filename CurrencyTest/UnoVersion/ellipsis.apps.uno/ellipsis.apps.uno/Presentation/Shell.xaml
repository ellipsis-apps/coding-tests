<UserControl x:Class="ellipsis.apps.uno.Presentation.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:uen="using:Uno.Extensions.Navigation.UI">

    <Grid>
        <!-- Optional top bar (Material/Cupertino/Fluent styled across platforms) -->
        <utu:NavigationBar Content="{Binding Title}" />

        <!-- Sidebar (left) + Content (right) -->
        <muxc:NavigationView PaneDisplayMode="Left"
                             OpenPaneLength="300"
                             CompactPaneLength="48"
                             IsSettingsVisible="True"
                             MenuItemsSource="{Binding MenuItems}"
                             FooterMenuItemsSource="{Binding FooterMenuItems}"
                             SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <!-- This is your main content area (everything to the right of the sidebar) -->
            <muxc:NavigationView.Content>
                <uen:Region />
            </muxc:NavigationView.Content>
        </muxc:NavigationView>
    </Grid>
</UserControl>
